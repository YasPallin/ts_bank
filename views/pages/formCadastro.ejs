<%- include('../partials/header'); %>
   
   <main>
   <div class="container py-5 mt-5">
        <div class="row">
            <div class="col">
                <h2 class="mt-5">Cadastro Cliente
                    <hr>
                </h2>
                <form action="/cadastro" method="POST">
                    <div class="input-group">
                        <div class=input-group-prepend>
                            <span class="input-group-text">Nome do Cliente</span>
                        </div>
                        <label for="nome"></label>
                        <input class="form-control" type="text" id="nome_cliente" name="nome_cliente"
                            placeholder="Nome do Cliente" required>
                    </div>
                    <div class="input-group mt-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Endereço</span>
                        </div>
                        <label for="endereco_cliente"></label>
                        <input class="form-control" type="text" id="endereco_cliente" name="endereco_cliente"
                            placeholder="Endereço do Cliente" required>
                    </div>
                    <div class="input-group mt-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">CPF do Cliente</span>
                        </div>
                        <label for="cpf"></label>
                        <input class="form-control" type="text" id="cpf_cliente" name="cpf_cliente"
                            placeholder="CPF do Cliente" required>
                    </div>
                    <button class="btn btn-success mb-5 mt-3" type="submit">Enviar</button>
                    </tbody>
                    </table>
                </form>
                </form>
            </div>
        </div>

    </div>
</main>

<%- include('../partials/footer'); %>